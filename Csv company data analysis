# Import necessary libraries
import pandas as pd
import matplotlib.pyplot as plt

# -------------------------------
# Load the dataset
# -------------------------------
df = pd.read_csv('company_data.csv')

# -------------------------------
# Basic Data Overview
# -------------------------------
print("ğŸ“Š First 5 Rows of Data:")
print(df.head(), "\n")

print("ğŸ§¾ Dataset Info:")
print(df.info(), "\n")

print("ğŸ“ˆ Summary Statistics:")
print(df.describe(), "\n")

print("â“ Missing Values:")
print(df.isnull().sum(), "\n")

# -------------------------------
# 1ï¸âƒ£ Average Salary by Department
# -------------------------------
avg_salary = df.groupby('Department')['Salary'].mean()
print("ğŸ’° Average Salary by Department:\n", avg_salary, "\n")

plt.figure(figsize=(8, 5))
avg_salary.plot(kind='bar', color='skyblue', edgecolor='black')
plt.title('Average Salary by Department')
plt.xlabel('Department')
plt.ylabel('Average Salary')
plt.grid(axis='y', linestyle='--', alpha=0.7)
plt.tight_layout()
plt.show()

# -------------------------------
# 2ï¸âƒ£ Average Performance by Department
# -------------------------------
avg_perf = df.groupby('Department')['Performance_Score'].mean()
print("â­ Average Performance by Department:\n", avg_perf, "\n")

